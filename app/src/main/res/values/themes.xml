<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TitleTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="SmallTextStyle">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:maxWidth">250dp</item>
        <item name="boxStrokeColor">@color/text_input_layout__selector</item>
        <item name="hintTextColor">@color/colorTextInputLayoutOnFocus</item>
        <item name="android:textColorHint">@color/colorTextInputLayoutWithoutFocus</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorTextColor">@color/colorTextInputLayoutError</item>
        <item name="errorIconTint">@color/colorTextInputLayoutError</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:textCursorDrawable">@drawable/edit_text__cursor_drawable</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_bottom_sheet</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MenuItemShape">
        <item name="android:shape">rectangle</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">100dp</item>
        <item name="cornerSizeBottomRight">100dp</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@drawable/nav_icon_color</item>
        <item name="itemTextColor">@drawable/nav_text_color</item>
    </style>

    <style name="toolbarStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

    <style name="ProfileTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

</resources>

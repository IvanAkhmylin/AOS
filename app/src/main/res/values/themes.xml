<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TitleTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="SmallTextStyle">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:maxWidth">250dp</item>
        <item name="boxStrokeColor">@color/text_input_layout__selector</item>
        <item name="hintTextColor">@color/colorTextInputLayoutOnFocus</item>
        <item name="android:textColorHint">@color/colorTextInputLayoutWithoutFocus</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorTextColor">@color/colorTextInputLayoutError</item>
        <item name="errorIconTint">@color/colorTextInputLayoutError</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:textCursorDrawable">@drawable/edit_text__cursor_drawable</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_bottom_sheet</item>
    </style>
</resources>

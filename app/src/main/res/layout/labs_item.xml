<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="14dp"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="16dp"
    app:cardBackgroundColor="#4DF0F2FF"
    app:cardElevation="0dp"
    app:strokeColor="#DEE1E8"
    app:strokeWidth="0.7dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Ktкция фыовфоыофоывофо фо оыов фоыовофоы овфывфоыво"
            android:fontFamily="@font/rubik_light"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



        <View
            android:id="@+id/tests_widget__footer"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="#F0F2FF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/question" />

        <LinearLayout
            app:layout_constraintBottom_toBottomOf="@+id/tests_widget__footer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tests_widget__footer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lab"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorPrimary"
                    android:src="@drawable/ic_labs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="Задание"
                    android:gravity="center"
                    android:fontFamily="@font/rubik_light"
                    android:layout_marginTop="8dp"
                    android:includeFontPadding="false"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/edu"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorPrimary"
                    android:src="@drawable/ic_baseline_info_24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="Объяснение"
                    android:gravity="center"
                    android:fontFamily="@font/rubik_light"
                    android:layout_marginTop="8dp"
                    android:includeFontPadding="false"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

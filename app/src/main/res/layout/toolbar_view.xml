<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="@dimen/toolbar__back_button_size"
        android:layout_height="@dimen/toolbar__back_button_size"
        android:layout_marginVertical="@dimen/toolbar__vertical_padding"
        android:layout_marginStart="@dimen/toolbar__horizontal_padding"
        android:background="@drawable/circle_ripple"
        android:padding="@dimen/toolbar__back_button_padding"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/toolbarTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/toolbar__vertical_padding"
        android:layout_marginStart="@dimen/toolbar__title_start_margin"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/toolbar__horizontal_padding"
        android:fontFamily="@font/rubik_light"
        android:textSize="@dimen/large_text_size"
        android:textColor="@color/chip_text_color"
        android:textStyle="bold"
        tools:text="Аутентификация" />

</LinearLayout>
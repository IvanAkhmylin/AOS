<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        android:id="@+id/credit_widget_payment"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/test_total_test_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/test_create_gradient">




            <TextView
                android:id="@+id/test_module"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="28dp"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/rubik_light"
                android:includeFontPadding="false"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/payment_accepted_month"
                app:layout_constraintTop_toBottomOf="@+id/payment_accepted_month" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

